<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <TextView
        android:id="@+id/addNewEventTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Add           Event"
        android:textColor="#D53E71"
        android:textSize="50dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/addNewEventTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textColor="#8BC34A"
        android:textSize="50dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <EditText
        android:id="@+id/nickNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"

        android:hint="Enter nickname here"

        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toEndOf="@+id/nickNameTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Address"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.158" />


    <TextView
        android:id="@+id/nickNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Nick name"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintTop_toBottomOf="@id/addressTitle"

        />

    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Choose category"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nickNameTitle"
        app:layout_constraintTop_toBottomOf="@id/nickNameTitle" />


    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center"
        android:padding="0dip"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/categoryTitle"

        app:layout_constraintTop_toTopOf="@+id/categoryTitle" />

    <TextView
        android:id="@+id/dayTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Choose Day"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/categoryTitle"
        app:layout_constraintTop_toBottomOf="@id/categoryTitle"

        />

    <TextView
        android:id="@+id/startTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="start time"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/dayTitle"
        app:layout_constraintTop_toBottomOf="@id/dayTitle" />

    <TextView
        android:id="@+id/endTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="End time"
        android:textColor="#D53E71"
        android:textSize="16dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/startTimeTitle"
        app:layout_constraintTop_toBottomOf="@id/startTimeTitle" />

    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Comment"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/endTimeTitle"
        app:layout_constraintTop_toBottomOf="@id/endTimeTitle"

        tools:layout_editor_absoluteY="491dp" />


    <Button
        android:id="@+id/editImgAddEvent"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Edit Image"
        android:textSize="20dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867" />

    <Button
        android:id="@+id/addThisEventButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Add event"
        android:textSize="20dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <EditText
        android:id="@+id/startTimeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="Enter start time"
        app:layout_constraintStart_toEndOf="@+id/startTimeTitle"


        app:layout_constraintTop_toBottomOf="@id/dayTitle" />

    <EditText
        android:id="@+id/endTimeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="Enter end time"
        app:layout_constraintStart_toEndOf="@+id/endTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTitle" />

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center"
        android:padding="0dip"

        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/dayTitle"
        app:layout_constraintTop_toTopOf="@+id/dayTitle" />

    <EditText
        android:id="@+id/commentEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="top"
        android:hint="add comment"
        android:inputType="textMultiLine"
        android:padding="10dp"

        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintStart_toEndOf="@+id/commentTitle"
        app:layout_constraintTop_toBottomOf="@+id/endTimeTitle">

    </EditText>

</androidx.constraintlayout.widget.ConstraintLayout>
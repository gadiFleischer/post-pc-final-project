<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <TextView
        android:id="@+id/addNewEventTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Add"
        android:textColor="#D53E71"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addNewEventTitle2"
        app:layout_constraintEnd_toEndOf="@+id/addNewEventTitle2"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/addNewEventTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Event"
        android:textColor="#D53E71"
        android:textSize="50dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addNewEventTitle2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/addNewEventTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" New"
        android:textColor="#8BC34A"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addNewEventTitle3"
        app:layout_constraintEnd_toStartOf="@+id/addNewEventTitle3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addNewEventTitle1"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/nickNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/textlines"
        android:clickable="true"
        android:focusable="true"
        android:maxLength="20"
        android:focusableInTouchMode="true"
        android:hint="Enter nickname here"
        android:text=""
        android:textColor="@color/black"

        android:textColorHint="@android:color/darker_gray"


        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/categorySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toEndOf="@+id/nickNameTitle"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxWidth="400dp"
        android:layout_marginStart="10dp"
        android:text="Address"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="textMultiLine"
        app:layout_constraintVertical_bias="0.158" />


    <TextView
        android:id="@+id/nickNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:maxLength="20"
        android:text="Nick name"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintBottom_toTopOf="@+id/categoryTitle"

        app:layout_constraintTop_toBottomOf="@id/addressTitle" />


    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Choose category"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/categorySpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/dayTitle"

        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintTop_toBottomOf="@id/nickNameTitle" />

    <TextView
        android:id="@+id/dayTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="56dp"
        android:gravity="center"
        android:text="Choose Day"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/daySpinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/startTimeTitle"

        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintTop_toBottomOf="@id/categoryTitle" />

    <TextView
        android:id="@+id/startTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="64dp"
        android:gravity="center"
        android:text="Start time"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/endTimeTitle"
        app:layout_constraintEnd_toStartOf="@+id/startTimeEdit"
        app:layout_constraintStart_toStartOf="@id/dayTitle"
        app:layout_constraintTop_toBottomOf="@id/dayTitle" />

    <TextView
        android:id="@+id/endTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="73dp"
        android:gravity="center"
        android:text="End time"
        android:textColor="#D53E71"

        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/endTimeEdit"
        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintTop_toBottomOf="@id/startTimeTitle" />


    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="66dp"
        android:gravity="center"
        android:text="Comment"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/commentEdit"
        app:layout_constraintStart_toStartOf="@id/addressTitle"
        app:layout_constraintTop_toBottomOf="@+id/endTimeTitle" />

    <Button
        android:id="@+id/editImgAddEvent"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Edit Image"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/addThisEventButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/addThisEventButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Add event"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="28dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <EditText
        android:id="@+id/startTimeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/textlines"
        android:focusableInTouchMode="false"
        android:hint="Enter start time          "

        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/endTimeEdit"


        app:layout_constraintStart_toEndOf="@+id/startTimeTitle"
        app:layout_constraintStart_toStartOf="@id/nickNameEdit"
        app:layout_constraintTop_toBottomOf="@id/dayTitle" />


    <EditText
        android:id="@+id/endTimeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textlines"
        android:focusableInTouchMode="false"
        android:hint="Enter end time            "
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/commentEdit"
        app:layout_constraintStart_toEndOf="@+id/endTimeTitle"
        app:layout_constraintStart_toStartOf="@id/nickNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTitle"
        app:layout_constraintVertical_bias="0.033" />

    <Spinner
        android:id="@+id/daySpinner"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="198dp"
        android:layout_height="42dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
        android:popupBackground="@android:color/white"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"
        app:layout_constraintStart_toEndOf="@+id/dayTitle"
        app:layout_constraintStart_toStartOf="@id/nickNameEdit"
        app:layout_constraintTop_toTopOf="@+id/dayTitle" />


    <Spinner
        android:id="@+id/categorySpinner"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="100dp"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="100dp"
        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
        android:popupBackground="@android:color/white"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"
        app:layout_constraintStart_toEndOf="@+id/categoryTitle"
        app:layout_constraintStart_toStartOf="@id/nickNameEdit"
        app:layout_constraintTop_toTopOf="@+id/categoryTitle" />

    <EditText
        android:id="@+id/commentEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/textlines"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:maxLength="20"
        android:hint="Add comment             "
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editImgAddEvent"
        app:layout_constraintStart_toEndOf="@+id/commentTitle"
        app:layout_constraintStart_toStartOf="@id/nickNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/endTimeTitle">

    </EditText>

</androidx.constraintlayout.widget.ConstraintLayout>
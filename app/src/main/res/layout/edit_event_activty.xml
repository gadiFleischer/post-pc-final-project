<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    >

    <TextView
        android:id="@+id/editEventTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:shadowColor="#00ccff"
        android:text="Edit"
        android:textColor="#D53E71"
        android:textSize="62dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013"

        />

    <TextView
        android:id="@+id/editEventTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#00ccff"
        android:text="Event"
        android:textColor="#8BC34A"
        android:textSize="62dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />


    <Button
        android:id="@+id/editImageButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Edit Image"
        android:textColor="@color/white"
        android:textSize="16dp"

        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.781" />

    <Button
        android:id="@+id/DoneEditButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8BC34A"
        android:text="Done edit"
        android:textColor="@color/white"
        android:textSize="16dp"

        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <Button
        android:id="@+id/deleteEditButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#8BC34A"
        android:text="Delete event"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:cornerRadius="28dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <TextView
        android:id="@+id/addressTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Address"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <TextView
        android:id="@+id/nickNameTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Nick name"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/addressTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/addressTitleEditEvent"

        />


    <EditText
        android:id="@+id/nickNameEditEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/textlines"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/black"
        android:hint="Enter nickname here"
        android:text=""

        android:textColorHint="@android:color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toEndOf="@+id/nickNameTitleEditEvent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endTimeTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="End time"
        android:textColor="#D53E71"
        android:textSize="16dp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/startTimeTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/startTimeTitleEditEvent" />

    <TextView
        android:id="@+id/dayTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Choose Day"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/categoryTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/categoryTitleEditEvent"
        />


    <Spinner
        android:id="@+id/daySpinnerEditEvent"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="200dp"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
        android:popupBackground="@android:color/white"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"
        app:layout_constraintStart_toStartOf="@id/nickNameEditEditEvent"
        app:layout_constraintStart_toEndOf="@+id/dayTitleEditEvent"
        app:layout_constraintTop_toTopOf="@+id/dayTitleEditEvent" />

    <EditText
        android:id="@+id/commentEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textlines"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:hint="      Add comment       "
        android:textColor="@color/black"
        android:textSize="16dp"
        android:inputType="textMultiLine"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/commentTitleEditEvent"
        app:layout_constraintStart_toStartOf="@id/nickNameEditEditEvent"
        app:layout_constraintTop_toBottomOf="@+id/endTimeTitleEditEvent">

    </EditText>

    <Spinner
        android:id="@+id/categorySpinnerEditEvent"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="100dp"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="100dp"
        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
        android:popupBackground="@android:color/white"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"
        app:layout_constraintStart_toEndOf="@+id/categoryTitleEditEvent"
        app:layout_constraintStart_toStartOf="@id/nickNameEditEditEvent"
        app:layout_constraintTop_toTopOf="@+id/categoryTitleEditEvent" />


    <EditText
        android:id="@+id/startTimeEditEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/textlines"
        android:textSize="16dp"
        android:focusableInTouchMode="false"
        android:hint="     Enter start time     "
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/startTimeTitleEditEvent"
        app:layout_constraintStart_toStartOf="@id/nickNameEditEditEvent"
        app:layout_constraintTop_toBottomOf="@id/dayTitleEditEvent" />

    <EditText
        android:id="@+id/endTimeEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="@drawable/textlines"
        android:focusableInTouchMode="false"
        android:hint="      Enter end time      "
        android:textColor="@color/black"
        android:textSize="16dp"

        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/endTimeTitleEditEvent"
        app:layout_constraintStart_toStartOf="@id/nickNameEditEditEvent"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTitleEditEvent" />

    <TextView
        android:id="@+id/commentTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Comment"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/endTimeTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/endTimeTitleEditEvent"
        tools:layout_editor_absoluteY="491dp" />

    <TextView
        android:id="@+id/startTimeTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Start time"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/dayTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/dayTitleEditEvent"/>

    <TextView
        android:id="@+id/categoryTitleEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Choose category"
        android:textColor="#D53E71"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nickNameTitleEditEvent"
        app:layout_constraintTop_toBottomOf="@id/nickNameTitleEditEvent" />


</androidx.constraintlayout.widget.ConstraintLayout>


